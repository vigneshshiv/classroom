{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom", 
      "dom.iterable", 
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "incremental": true
  },
  "include": [
    "next-env.d.ts", 
    "next-auth.d.ts",
    "**/*.ts", 
    "**/*.tsx",
    "./src/**/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
